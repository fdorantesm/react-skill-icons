{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["dom", "es2020"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./scripts"]
  },
  "exclude": ["./scripts/**/*", "dist"]
}
